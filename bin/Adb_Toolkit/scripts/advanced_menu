#!/bin/bash 

while :
do

  clear

  echo 
  echo "============================================================"
  echo "               Adb Toolkit - by dharmy ()"
  echo "============================================================"
  echo
  echo "> ADVANCED OPTIONS"
  echo
  echo " 12 - Reboot Device" 
  echo " 13 - Reboot Device to Recovery"
  echo " 14 - Reboot Device to Bootloader"
  echo " 15 - Remove screenlock (Works only for rooted devices)"
  echo " 16 - Flash Recovery"
  echo " 17 - Flash and Boot Recovery" 
  echo " 18 - Backup Device Storage"
  echo " x  - Change Font"
  echo " b  - Change Bootanimation"
  echo
  echo "  0 - BACK TO MAIN MENU"
  echo
  echo -n "Enter option: "
    TTY=$(/usr/bin/tty)
  exec 3<&0 < $TTY  
  read -r opt 0<&3

  if    [ "$?" != 1 ] ; then

    case $opt in
      12) ./scripts/reboot reboot_os;; 
      13) ./scripts/reboot reboot_recovery;; 
      14) ./scripts/reboot reboot_bootloader;;
      15) ./scripts/add_busybox_run_parts show_help;;  
      16) ./scripts/flash flash_recovery;; 
      17) ./scripts/flash flash_boot;;
      18) ./scripts/backup backup;;      
      #99) /usr/share/Adb_Toolkit/scripts/build_rom;;
      0)  clear; exit 0;;
      x) ./scripts/font_change change_font;;
      b) ./scripts/bootanimation change;;
      *) ./scripts/invalid_option; continue;;
    esac
  fi
done

